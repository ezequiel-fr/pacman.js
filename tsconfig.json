{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./server",
    "outDir": "./dist/",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./server"],
  "exclude": ["./src"]
}